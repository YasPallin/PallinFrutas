<!-- para incluir o header -->
<%- include("../partials/header"); %>

	<main class="container-md">
		<section class="mb-5">
			<div class="row">
				<div class="col-md-6 mr-auto ml-auto">
					<h1 class="mt-5 mb-5">Cadastrar Produtos</h1>
					<form action="/cadastrarProduto" method="POST">

						<div class="btn-group btn-group-toggle" data-toggle="buttons">
							<label class="btn btn-outline-danger active">
							  <input type="radio" name="categoria" id="frutas" value="Frutas" checked> Frutas
							</label>
							<label class="btn btn-outline-danger">
							  <input type="radio" name="categoria" id="verduras" value="Verduras"> Verduras
							</label>
							<label class="btn btn-outline-danger">
								<input type="radio" name="categoria" id="legumes" value="Legumes"> Legumes
							  </label>
						</div>
						
						<div class="form-group mt-2">
							<label for="descricao"> Descrição </label>
							<input class="form-control" type="text" name="descricao" id="descricao" placeholder="Descrição do produto" required>
						</div>

						<div class="form-group mt-2">
							<label for="valor"> Valor Unitário </label>
							<input class="form-control" type="text" name="valor" id="valor" placeholder="Ex: 0.85" required>
						</div>

						<div class="form-group mt-2">
							<label for="fornecedor"> Fornecedor </label>
							<select name="fornecedor" id="fornecedor" class="form-control">
								<option value="1">Fornecedor 1</option>
								<option value="2">Fornecedor 2</option>
								<option value="3">Fornecedor 3</option>
								<option value="4">Fornecedor 4</option>
								<option value="5">Fornecedor 5</option>
							</select>
						</div>
						
						<div class="form-group mt-2">
							<label for="quantidade_estoque"> Quantidade em estoque </label>
							<input class="form-control" type="text" name="quantidade_estoque" id="quantidade_estoque" placeholder="Ex: 50" required>
						</div>

						<button type="submit" class="btn btn-danger mt-2" id="btnCadastrar" disabled>Cadastrar</button>
					</form>
				</div>
			</div>
		</section>

<!-- para incluir o footer -->
<%- include("../partials/footer"); %>